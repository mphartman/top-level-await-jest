{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "Node16",
    "moduleResolution": "Node16",

    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src", "./test"],
  "exclude": ["dist", "node_modules"]
}
